<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="master_hsn_form_view" model="ir.ui.view">
            <field name="name">master.hsn.form</field>
            <field name="model">master.hsn</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="HSN Cose"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="master_hsn_tree_view" model="ir.ui.view">
            <field name="name">master.hsn.tree</field>
            <field name="model">master.hsn</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="master_hsn_search_view" model="ir.ui.view">
            <field name="name">master.hsn.search</field>
            <field name="model">master.hsn</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <record id="action_master_hsn" model="ir.actions.act_window">
            <field name="name">HSN Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.hsn</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Create to add new HSN Code.
                </p>
            </field>
        </record>
        <!--master.hsn.menu-->
        <menuitem id="menu_master_hsn"
                  name="HSN Code"
                  parent="sale.menu_sale_config"
                  action="action_master_hsn"/>
    </data>
</odoo>