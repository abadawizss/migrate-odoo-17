<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_pyrax" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="exporter_ref"/>
                <field name="buyer_order_no"/>
            </field>
            <notebook position="inside">
                <page id="relec_transport" string="Transport">
                    <group>
                        <group string="Transport" invisible="move_type != ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">
                            <field name="carrier_id" readonly="state != 'draft'"/>
                            <field name="pre_carrier_receipt_place"/>
                            <field name="transport"/>
                            <field name="bags_count"/>
                        </group>
                        <group string="Port" invisible="move_type != ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">
                            <field name="port_loading"/>
                            <field name="port_discharge"/>
                        </group>
                        <group string="Dispatch" invisible="move_type != ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">
                            <field name="dispatch_document_no"/>
                            <field name="dispatch_through"/>
                        </group>
                        <group>
                            <field name="delivery_note_date"/>
                        </group>
                    </group>
                </page>
                <page name="bank" string="Bank Details">
                    <group>
                        <group>
                            <field name="bank_account_id" string="Bank Account"/>
                            <field name="corr_bank_account_id"/>
                        </group>
                        <group>
                            <field name="additional_bank_details"/>
                        </group>
                    </group>
                </page>
                <page id="relec_note" string="Notes">
                    <group string="Delivery Note">
                        <field name="delivery_note" nolabel="1"/>
                    </group>
                    <group string="Terms of Delivery &amp; Payment">
                        <field name="delivery_payment_terms"
                            nolabel="1"/>
                    </group>
                    <!-- <group string="Reports Note">
                        <field name="report_note" nolabel="1"/>
                    </group> -->
                    <group string="Tax Invoice Note">
                        <group>
                            <field name="tax_inv_base"/>
                        </group>
                        <field name="tax_inv_note" nolabel="1"/>
                    </group>
                </page>
            </notebook>
            <group id="other_tab_group" position="inside">
                <group string="Print">
                    <field name="print_stamp"/>
                    <field name="print_signature"/>
                </group>
            </group>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="use_date" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="use_date" invisible="1"/>
            </xpath>

        </field>
    </record>

</odoo>
