        <!-- These are the changes of Odoo 17 version -->
        <record id="account_commercial_invoices_pyrax" model="ir.actions.report">
            <field name="name">Commercial Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">relec_account.commercial_report_invoice</field>
            <field name="report_file">relec_account.commercial_report_invoice</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[Command.link(ref('account.group_account_invoice'))]"/>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
