<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="commercial_report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <table class="table table-sm">
                    <tr>
                        <td width="33.33%">
                            <strong>Consignor: </strong>
                        </td>
                        <td width="33.33%">
                            <strong>Consignee: </strong>
                            <t t-if="o.partner_shipping_id.ref">
                                (Customer Ref:
                                <span t-field="o.partner_shipping_id.ref"/>
                                )
                            </t>
                        </td>
                        <td width="33.33%">
                            <strong>Buyer: </strong>
                            <t
                                t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <t t-if="o.partner_id.ref">
                                    (Customer Ref:
                                    <span t-field="o.partner_id.ref"/>
                                    )
                                </t>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <address t-field="o.company_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                            <div t-if="o.company_id.vat">
                                GSTIN:
                                <span t-field="o.company_id.vat"/>
                            </div>
                            <div t-if="o.company_id.iec_no">
                                IEC No.:
                                <span t-field="o.company_id.iec_no"/>
                            </div>
                        </td>
                        <td>
                            <address t-field="o.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                            <div t-if="o.partner_shipping_id.vat"
                                style="padding-top: 0px !important;">
                                GSTIN:
                                <span t-field="o.partner_shipping_id.vat"/>
                            </div>
                        </td>
                        <td>
                            <t
                                t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                                <div t-if="o.partner_id.vat"
                                    style="padding-top: 0px !important;">
                                    GSTIN:
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                            <t t-else="">
                                Same As Consignee
                            </t>
                        </td>
                    </tr>
                </table>

                <div class="page">
                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Commercial Invoice: </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Commercial Invoice:</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Commercial Invoice: </span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note: </span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note: </span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill: </span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>

                    <div class="row mt8 mb8">
                        <div class="col-auto mw-100 mb-2" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-if="o.invoice_date" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="exporter_ref">
                            <strong>Exporter's Ref:</strong>
                            <p class="m-0" t-if="o.name" t-field="o.exporter_ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-if="o.ref" t-field="o.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="transport">
                            <strong>Transport:</strong>
                            <p class="m-0" t-if="o.transport" t-field="o.transport"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="carriage_by">
                            <strong>Carriage By</strong>
                            <p class="m-0" t-if="o.carrier_id" t-field="o.carrier_id"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-auto mw-100 mb-2" name="origin_country_id">
                            <strong>Country of Origin of Goods</strong>
                            <p class="m-0" t-field="o.company_id.country_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="destination_country_id">
                            <strong>Country of Destination:</strong>
                            <p class="m-0" t-if="o.partner_shipping_id" t-field="o.partner_shipping_id.country_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="pre_carrier_receipt_place">
                            <strong>Place of receipt by Pre Carrier:
                            </strong>
                            <p class="m-0" t-if="o.pre_carrier_receipt_place" t-field="o.pre_carrier_receipt_place"/>
                        </div>
                    </div>
                    <div class="row mt8 mb8">
                        <div class="col-auto mw-100 mb-2" name="port_loading">
                            <strong>Port of Loading:</strong>
                            <p class="m-0" t-if="o.port_loading" t-field="o.port_loading"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="port_discharge">
                            <strong>Port of Discharge:</strong>
                            <p class="m-0" t-if="o.port_discharge" t-field="o.port_discharge"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="invoice_incoterm_id">
                            <strong>Incoterm</strong>
                            <p class="m-0" t-if="o.invoice_incoterm_id" t-field="o.invoice_incoterm_id"/>
                            (
                            <span t-field="o.invoice_incoterm_id.code"/>
                            )
                        </div>
                        <div class="col-auto mw-100 mb-2" name="final_destination">
                            <strong>Final Destination:</strong>
                            <p t-if="o.partner_shipping_id.country_id" class="m-0" t-field="o.partner_shipping_id.country_id"/>
                        </div>
                    </div>

                    <t t-set="display_discount"
                        t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <t t-set="display_distributed_lines" t-value="o.distributed_line_ids"/>

