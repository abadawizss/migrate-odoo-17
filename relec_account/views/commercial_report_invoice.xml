        <template id="commercial_report_invoice_document_with_payments"
            inherit_id="relec_account.commercial_report_invoice_document"
            primary="True">
            <xpath expr="//div[@id='total']/div/table" position="inside">
                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td>
                            <i
                                class="oe_form_field text-right oe_payment_label">
                                Paid on
                                <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                            </i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td>
                            <strong>Amount Due</strong>
                        </td>
                        <td class="text-right">
                            <span t-field="o.amount_residual"/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>

        <template id="commercial_report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                        t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t
                        t-call="relec_account.commercial_report_invoice_document" 
                        t-lang="lang"/>
                </t>
            </t>
        </template>

