                    <tr>
                        <td width="33.33%">
                            <strong>Consignor:</strong>
                        </td>
                        <td width="33.33%">
                            <strong>Consignee:</strong>
                            <t t-if="o.partner_shipping_id.ref">
                                (Customer Ref:
                                <span t-field="o.partner_shipping_id.ref"/>
                                )
                            </t>
                        </td>
                        <td width="33.33%">
                            <strong>Buyer:</strong>
                            <t
                                    t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <t t-if="o.partner_id.ref">
                                    (Customer Ref:
                                    <span t-field="o.partner_id.ref"/>
                                    )
                                </t>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <address t-field="o.company_id.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                            <div t-if="o.company_id.vat">
                                GSTIN:
                                <span t-field="o.company_id.vat"/>
                            </div>
                            <div t-if="o.company_id.iec_no">
                                IEC No.:
                                <span t-field="o.company_id.iec_no"/>
                            </div>
                        </td>
                        <td>
                            <address t-field="o.partner_shipping_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                            <div t-if="o.partner_shipping_id.vat"
                                 style="padding-top: 0px !important;">
                                GSTIN:
                                <span t-field="o.partner_shipping_id.vat"/>
                            </div>
                        </td>
                        <td>
                            <t
                                    t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <address t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                                <div t-if="o.partner_id.vat"
                                     style="padding-top: 0px !important;">
                                    GSTIN:
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                            <t t-else="">
                                Same As Consignee
                            </t>
                        </td>
                    </tr>
                </table>

                <div class="page">
                    <h2 class="mt4">
                        <span
                                t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Tax Invoice:
                        </span>
                        <span
                                t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Tax Invoice:
                        </span>
                        <span
                                t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Tax Invoice:
                        </span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note:</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note:</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill:</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
