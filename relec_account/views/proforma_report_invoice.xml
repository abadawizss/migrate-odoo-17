        <template id="proforma_report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <table class="table table-sm">
                    <tr>
                        <td width="33.33%"><strong>Consignor: </strong></td>
                        <td width="33.33%">
                            <strong>Consignee: </strong>
                            <t t-if="o.partner_shipping_id.ref">
                                (Customer Ref: <span t-field="o.partner_shipping_id.ref" />)
                            </t>
                        </td>
                        <td width="33.33%">
                            <strong>Buyer: </strong>
                            <t t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <t t-if="o.partner_id.ref">
                                    (Customer Ref: <span t-field="o.partner_id.ref" />)
                                </t>
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <address t-field="o.company_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}' />
                            <div t-if="o.company_id.vat">
                                GSTIN: <span t-field="o.company_id.vat"/>
                            </div>
                            <div t-if="o.company_id.iec_no">
                                IEC No.: <span t-field="o.company_id.iec_no"/>
                            </div>
                        </td>
                        <td>
                            <address t-field="o.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}' />
                            <div t-if="o.partner_shipping_id.vat" style="padding-top: 0px !important;">
                                GSTIN: <span t-field="o.partner_shipping_id.vat"/></div>
                        </td>
                        <td>
                            <t t-if="o.partner_id.id != o.partner_shipping_id.id">
                                <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}' />
                                <div t-if="o.partner_id.vat" style="padding-top: 0px !important;">
                                    GSTIN: <span t-field="o.partner_id.vat"/></div>
                            </t>
                            <t t-else="">
                                Same As Consignee
                            </t>
                        </td>
                    </tr>
                </table>

                <div class="page">
                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Revised Proforma Invoice: </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Revised Proforma Invoice: </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Revised Proforma Invoice: </span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note: </span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note: </span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill: </span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>

                    <div class="row mt16 mb16">
                        <div class="col-auto mw-100 mb-2" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-if="o.invoice_date" t-field="o.invoice_date"/>
                        </div>
                        <div t-if="o.user_id.name" class="col-auto mw-100 mb-2">
                            <strong>Salesperson:</strong>
                            <p class="m-0" t-field="o.user_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="origin_country_id">
                            <strong>Country of Origin of Goods</strong>
                            <p class="m-0" t-if="o.company_id" t-field="o.company_id.country_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="destination_country_id">
                            <strong>Country of Destination:</strong>
                            <p class="m-0" t-if="o.partner_shipping_id.country_id"
                                t-field="o.partner_shipping_id.country_id"/>
                        </div>
                    </div>
                    <div class="row mt16 mb16">
                        <div class="col-auto mw-100 mb-2" name="transport">
                            <strong>Transport:</strong>
                            <p class="m-0" t-if="o.transport" t-field="o.transport"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" name="carrier_id">
