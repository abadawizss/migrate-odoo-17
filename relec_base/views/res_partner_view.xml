<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vinayak_view_partner_form" model="ir.ui.view">
        <field name="name">vinayak.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <field name="state_code"/>
            </xpath>
        </field>
    </record>

    <record id="view_res_bank_form_inherit_pyrax" model="ir.ui.view">
        <field name="name">res.bank.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <field name="bic" position="after">
                <field name="ifsc_code"/>
            </field>
        </field>
    </record>
</odoo>