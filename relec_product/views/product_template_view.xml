<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_pyrax_inherit" model="ir.ui.view">
        <field name="name">pyrax.product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="after">
                <group string="Extra Information">
                    <field name="free_sale_certificate" />
                    <field name="has_product_drawback" />
                    <field name="has_product_dangerous_goods" />
                </group>
            </xpath>
            <xpath expr="//div[@name='weight']" position="after">
                <!--Deprecated in Odoo 17-->
                <!-- <label for="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/> -->
                <!--End Deprecated in Odoo 17-->
                <label for="gross_weight" invisible="product_variant_count > 1 and is_product_variant == False"/>
                <div class="o_row" name="weight" invisible="product_variant_count > 1 and is_product_variant == False">
                    <field name="gross_weight"/>
                    <span><field name="weight_uom_name"/></span>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
