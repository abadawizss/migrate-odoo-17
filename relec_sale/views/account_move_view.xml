<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_pyrax_sale" model="ir.ui.view">
        <field name="name">account.move.form.pyrax.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Unlink invoice from sale order -->
            <button name="button_draft" position="after">
                <button name="button_unlink_order" string="Unlink from Order" type="object" class="oe_highlight" groups="account.group_account_invoice" invisible="state != 'cancel'"/>
            </button>
        </field>
    </record>

</odoo>
