<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_term_delivery" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sale.comment</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <!-- <xpath expr="//div[@id='confirmation_email_setting']" position="after"> -->
            <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <label for="sale_delivery_term"/>
                    <span class="fa fa-lg fa-building-o" role="img"/>
                    <div class="text-muted">
                        Show standard terms of delivery for PI
                    </div>
                    <div class="content-group">
                        <div class="mt16">
                            <field name="sale_delivery_term" placeholder="Insert your terms of delivery here for PI..."/>
                        </div>
                    </div>
                </div>
            </div>
           <!-- </xpath> -->
        </field>
    </record>

</odoo>