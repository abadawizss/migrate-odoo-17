<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_sale_domestic_pro_forma_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <table class="table table-sm">
            <tr>
                <td width="33.33%"><strong>Consignor: </strong></td>
                <td width="33.33%">
                    <strong>Consignee: </strong>
                    <t t-if="doc.partner_shipping_id.ref">
                        (Customer Ref: <span t-field="doc.partner_shipping_id.ref"/>)
                    </t>
                </td>
                <td width="33.33%">
                    <strong>Buyer: </strong>
                    <t t-if="doc.partner_id.id != doc.partner_shipping_id.id">
                        <t t-if="doc.partner_id.ref">
                            (Customer Ref: <span t-field="doc.partner_id.ref"/>)
                        </t>
                    </t>
                </td>
            </tr>
            <tr>
                <td>
                    <address t-field="doc.company_id.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                    <div t-if="doc.company_id.vat">
                        GSTIN: <span t-field="doc.company_id.vat"/>
                    </div>
                    <div t-if="doc.company_id.iec_no">
                        IEC No.: <span t-field="doc.company_id.iec_no"/>
                    </div>
                </td>
                <td>
                    <address t-field="doc.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                    <div t-if="doc.partner_shipping_id.vat" style="padding-top: 0px !important;">
                        GSTIN: <span t-field="doc.partner_shipping_id.vat"/></div>
                </td>
                <td>
                    <t t-if="doc.partner_id.id != doc.partner_shipping_id.id">
                        <address t-field="doc.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                        <div t-if="doc.partner_id.vat" style="padding-top: 0px !important;">
                            GSTIN: <span t-field="doc.partner_id.vat"/></div>
                    </t>
                    <t t-else="">
                        Same As Consignee
                    </t>
                </td>
            </tr>
        </table>

        <div class="page">
            <div class="oe_structure"/>

            <h2 class="mt16">
                <span>Pro-Forma Invoice No: </span>
                <span t-field="doc.name"/>
            </h2>

            <div class="row mt8">
                <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Order Date:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Quotation Date:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2" name="expiration_date">
                    <strong>Expiration:</strong>
                    <p class="m-0" t-field="doc.validity_date"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Salesperson:</strong>
                    <p class="m-0" t-if="doc.user_id.name" t-field="doc.user_id"/>
                </div>
                <div class="col-auto mw-100 mb-2" name="carrier_id">
                    <strong>Carriage By:</strong>
                    <p class="m-0" t-if="doc.carrier_id" t-field="doc.carrier_id"/>
                </div>
                <div class="col-auto mw-100 mb-2" name="exporter_ref_number">
                    <strong>Consigner Reference Number:</strong>
                    <p class="m-0"  t-if="doc.exporter_ref" t-field="doc.exporter_ref"/>
                </div>
                <div class="col-auto mw-100 mb-2" name="final_destination">
                    <strong>Final Destination:</strong>
                    <p class="m-0"  t-if="doc.partner_shipping_id.city"
                        t-field="doc.partner_shipping_id.city"/>
                </div>
            </div>
            <div class="row mb8">
                <div class="col-auto mw-100 mb-2" name="payment_term_id">
                    <strong>Mode/Terms of Payments</strong>
                    <p t-if="doc.payment_term_id" class="m-0"
                        t-field="doc.payment_term_id"/>
                </div>
                <div class="col-auto mw-100 mb-2" name="incoterms">
                    <strong>Incoterms</strong>
                    <p class="m-0" t-field="doc.incoterm"/> (<span t-field="doc.incoterm.code"/>)
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <table class="table table-sm o_main_table">
                <t t-set="show_use_date" t-value="any(line.use_date for line in doc.order_line)"/>
                <thead>
                    <tr>
                        <th name="th_sr_no">Sr.No</th>
                        <th name="th_description" class="text-left">Description</th>
                        <th name="th_expiry_product" t-if="show_use_date" class="text-center">Expiry of Product</th>
                        <th>HSN/SAC</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_priceunit" class="text-right">Unit Price (<span t-field="doc.currency_id"/>)</th>
                        <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-right">Taxes</th>
                        <th name="th_subtotal" class="text-right">
                            <t groups="account.group_show_line_subtotals_tax_excluded">Amount (<span t-field="doc.currency_id"/>)</t>
                            <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-set="i" t-value="1"/>
                    <t t-foreach="doc.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_sequence">
                                    <t t-if="line.product_id.type != 'service'">
                                        <span t-esc="i"/> 
                                        <t t-set="i" t-value="i+1"/>
                                    </t>
                                </td>
                                <td name="td_name"><span t-field="line.product_id.name"/></td>
                                <td name="td_expiry_product" t-if="show_use_date" class="text-center">
                                    <span t-field="line.use_date" t-options='{"widget": "date"}'/>
                                </td>
                                <td>
                                    <span t-if="line.product_id.l10n_in_hsn_code"
                                        t-field="line.product_id.l10n_in_hsn_code"/>
                                </td>
                                <td name="td_quantity" class="text-right">
                                    <t t-if="line.product_id.type != 'service'">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </t>
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                 <td name="td_taxes" class="text-right">
                                     <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                 </td>
                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                   />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <t t-set="tax_grouped" t-value="doc.get_taxes_values()"/>

            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div class="col-6 pull-left">
                        <p id="total_in_words" class="mb16">
                            <strong>Total (In Words): </strong>
                            <span t-field="doc.amount_total_words"/> only
                        </p>
                    </div>
<!--                     <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto"> -->
                    <div class="col-6 ml-auto pull-right">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                <td  name="td_amount_untaxed" class="text-right">
                                    <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                            <!-- <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group_3"  class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-else ="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t> -->
                            <t t-foreach="tax_grouped" t-as="tax">
                                <tr style="">
                                    <td>
                                        <span class="ml16"
                                            t-esc="tax"/>
                                        <span class="ml8"
                                            t-esc="tax_grouped[tax]['amount']"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                    <td class="o_price_total"/>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td name="td_amount_total_label"><strong>Total</strong></td>
                                <td name="td_amount_total" class="text-right">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="oe_structure"/>
            <p name="delivery_payment_terms">
                <strong>Terms of Delivery:</strong><br/>
                <span t-if="doc.delivery_payment_terms"
                    t-field="doc.delivery_payment_terms"/>
            </p>

            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>

            <div class="table-bordered">
                <div class="row">
                    <div class="col-6 pull-left ml-1" t-if="doc.bank_account_id">
                        <strong>Bank Details:</strong>
                        <br/>
                        <t t-if="doc.bank_account_id.bank_id">
                            Name of the Company:
                            <span t-field="doc.company_id"></span><br/>
                            Bank Name:
                            <span t-field="doc.bank_account_id.bank_id.name"></span>
                            <br/>
                            Bank IFSC Code:
                            <span t-field="doc.bank_account_id.bank_id.ifsc_code"></span>
                            <br/>
                        </t>
                        Account No:
                        <span t-field="doc.bank_account_id.acc_number"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 ml-1" t-if="doc.additional_bank_details">
                        <strong>Additional Bank Details:</strong>
                        <span t-field="doc.additional_bank_details"/>
                    </div>
                </div>
            </div>

            <p t-if="doc.note" name="comment">
                <strong>Declaration:</strong><br/>
                <span t-field="doc.note"/>
            </p>

            <div class="row pull-right" style="page-break-inside: avoid;">
                <div t-if="doc.print_stamp and doc.company_id.stamp" class="mr64">
                    <img t-att-src="image_data_uri(doc.company_id.stamp)"
                        style="max-height: 3cm; max-width: 6cm;"/>
                </div>
                <div t-if="doc.print_signature and doc.user_id.signature_image" class="mr4"
                    name="stamp_signature">
                    <img t-att-src="image_data_uri(doc.user_id.signature_image)"
                        style="max-height: 3cm; max-width: 6cm;"/>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="pyrax_report_saleorder_domestic_pro_forma">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="relec_sale.report_sale_domestic_pro_forma_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
