                            <tr>
                                <th style="padding: 5px;text-align: left; width: 15%;">Phone</th>
                                <td style="padding: 5px;" t-out="object.partner_id.phone">+621</td>
                            </tr>
                            <tr>
                                <th style="padding: 5px;text-align: left; width: 15%;">Email</th>
                                <td style="padding: 5px;" t-out="object.partner_id.email">zensoftware@us</td>
