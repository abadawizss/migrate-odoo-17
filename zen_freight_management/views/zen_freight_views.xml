<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit sale invoice Form View for freight_charges field addition -->
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="after">
                    <!-- <field name="freight_charges" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/> -->
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <field name="exclude" string="Freight Charges Exclude" readonly="state != 'draft'"/>
                        <field name="freight_charges" force_save="1" widget="monetary" colspan="1" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Inherit account move Form View for tax  field addition -->
        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="freight_charges" force_save="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="res_config_settings_view_form_approval_freight" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.approval.freight</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//app[@data-string='Sales']" position="inside">
                <block title="Freight Charges Approval">
                    <setting>
                        <field name="activate_freight_charges"/>
                        <div class="text-muted">
                            <span>Activate Freight Charges Approval</span><br />
                            <div class="mt8" invisible="activate_freight_charges ==False">
                            <label for="activate_freight_charges" string="Discount Approval Authority"/>
                                <div>
                                    <field name="user_approval_freight_charges" widget="many2many_tags" force_save="1" required="activate_approval_discount==True"/>
                                    <field name="user_approval_list_freight_charges" invisible="1"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
            </field>
        </record>

    </data>
</odoo>