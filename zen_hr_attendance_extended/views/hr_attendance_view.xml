<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_tree_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='overtime_hours']" position="after">
                <field name="check_in_lat" optional="hide"/>
                <field name="check_out_lat" optional="hide"/>
                <field name="geotag" optional="show"/>
                <field name="check_in_long" optional="hide"/>
                <field name="check_out_long" optional="hide"/>
                <field name="out_geotag" optional="show"/>
                <field name="address" optional="show"/>
                <field name="out_address" optional="show"/>
                <field name="location_url" widget="url" optional="show"/>
                <field name="out_location_url" widget="url" optional="show"/>
                <field name="work_area_status_in" optional="hide"/>
                <field name="work_area_status_out" optional="hide"/>
                <field name="state" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance_form_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.attendance.form.view.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="approve_attendance" invisible="state in ['approved','rejected']" groups="hr_attendance.group_hr_attendance_manager" type="object" string="Approve" data-hotkey="w"/>
                    <button name="reject_attendance" invisible="state in ['approved','rejected']" groups="hr_attendance.group_hr_attendance_manager" type="object" string="Reject" data-hotkey="w"/>
                    <field name="state" widget="statusbar" statusbar_visible="waiting_to_approve,approved"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="check_in_lat" invisible="1"/>
                <field name="check_out_lat" invisible="1"/>
                <field name="geotag"/>
                <field name="check_in_long" invisible="1"/>
                <field name="check_out_long" invisible="1"/>
                <field name="out_geotag"/>
                <field name="address"/>
                <field name="out_address"/>
                <field name="location_url" widget="url"/>
                <field name="out_location_url" widget="url"/>
                <field name="work_area_status_in"/>
                <field name="work_area_status_out"/>
            </xpath>
        </field>
    </record>
</odoo>