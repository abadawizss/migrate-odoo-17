<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_kanban_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.employee.kanban.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//div/ul" position="inside">
                <li t-if="record.device.raw_value" class="o_force_ltr">
                    <i class="fa fa-fw me-2 fa-microchip text-primary" title="Device"/>
                    <field name="device"/>
                </li>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_tree_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="device" optional="show"/>
                <field name="face_image" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="hr_work_employee_form_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="inside">
                <field name="device"/>
                <field name="face_image" widget="image"/>
            </xpath>
        </field>
    </record>
</odoo>