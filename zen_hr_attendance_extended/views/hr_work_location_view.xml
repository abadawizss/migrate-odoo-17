<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_work_location_tree_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.work.location.view.tree.inherit</field>
        <field name="model">hr.work.location</field>
        <field name="inherit_id" ref="hr.hr_work_location_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="lat"/>
                <field name="long"/>
                <field name="geotag"/>
                <field name="address"/>
            </xpath>
        </field>
    </record>

    <record id="hr_work_location_form_inherit_view_zen" model="ir.ui.view">
        <field name="name">hr.work.location.view.form.inherit</field>
        <field name="model">hr.work.location</field>
        <field name="inherit_id" ref="hr.hr_work_location_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="lat"/>
                <field name="long"/>
                <field name="geotag"/>
                <field name="address"/>
            </xpath>
        </field>
    </record>
</odoo>