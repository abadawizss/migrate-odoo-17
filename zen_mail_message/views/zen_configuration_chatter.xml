<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_active_chatter_crm" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_active_chatter_crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='crm']/div[1]" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="active_chatter_in_crm"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Enabled Chatter" for="active_chatter_in_crm"/>
                            <div class="text-muted">
                                    Chatter Email CC For Module CRM 
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_active_chatter_sale" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_active_chatter_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']/div[3]" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="active_chatter_in_sale"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Enabled Chatter" for="active_chatter_in_sale"/>
                            <div class="text-muted">
                                    Chatter Email CC For Module Sale 
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_active_chatter_purchase" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_active_chatter_purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div[1]" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="active_chatter_in_purchase"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Enabled Chatter" for="active_chatter_in_purchase"/>
                            <div class="text-muted">
                                    Chatter Email CC For Module Purchase 
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>