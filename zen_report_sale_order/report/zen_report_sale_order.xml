        <record id="zen_sale_order_inherit_reseller" model="ir.ui.view">
            <field name="name">zen_sale_order_inherit_reseller</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_in_reseller_partner_id']" position="replace">
                    <field name="l10n_in_reseller_partner_id" invisible="1"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                    <field name="hsn_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>