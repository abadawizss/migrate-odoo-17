<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-extend="portal.Composer">
        <t t-jquery=".o_portal_chatter_composer_btn" t-operation="after">
            <button class="o_portal_chatter_new_button btn btn-secondary" type="button" title="Request Revision">Request Revision</button>
        </t>
         <t t-jquery=".o_portal_chatter_attachment_btn" t-operation="before">
            <button id="my-button" class="o_portal_chatter_new_button btn btn-secondary" type="button" title="Approve">Approve</button>
        </t>
        <t t-jquery=".o_portal_chatter_composer_btn" t-operation="replace">
            <button t-attf-data-action="/mail/chatter_post" class="o_portal_chatter_composer_btn btn btn-primary" type="submit">Send Message</button>
        </t>
    </t>
</templates>