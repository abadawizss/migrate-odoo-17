    <template id="project_portal_task_list" name="Project Task List (Portal)">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th invisible="1">ID</th>
                        <th>Task Name</th>
                        <th>Description</th>
                        <th>Stage</th>
                        <th>Attachments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="tasks" t-as="task">
                        <tr>
                            <td invisible="1">
                                <t t-esc="task['id']"/>
                            </td>
                            <td>
                                <t t-esc="task['name']"/>
                            </td>
                            <td>
                                <t t-esc="task['description']"/>
                            </td>
                            <td>
                                <t t-esc="task['stage']"/>
                            </td>
                            <td>
                                <ul>
                                    <t t-foreach="task['attachments']" t-as="attachment">
                                        <li>
                                            <a t-attf-href="/web/content/{{ attachment.id }}?download=true">
                                                <t t-esc="attachment.name"/>
                                            </a>
                                        </li>
                                    </t>
                                </ul>
                            </td>
                            <td>
                                <button id="my-button" class="btn btn-primary my-button" t-on-click="_onButtonClick" t-att-data-task-id="task['id']">Approve</button>
                                <button class="btn btn-danger">Revise</button>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>

</odoo>